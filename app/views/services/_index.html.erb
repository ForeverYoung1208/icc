<h1><%=t 'services.header' %></h1>

<table border='solid'>
  <tr>
    <th>section</th>
    <th>name</th>
    <th>text</th>
    <th>4</th>
    <th>5</th>
    <th>5</th>
  </tr>

<% @services.each do |service| %>
  <tr>
    <td><%=t( service.section.name )%></td>
    <td><%=raw( sanitize( service.name( I18n.locale ) ) )%></td>
    <td><%=raw( sanitize( service.text( I18n.locale ) ) )%></td>
    <td><%= link_to 'Show', service %></td>
    <td><%= link_to 'Edit', edit_service_path(service) %></td>
    <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

