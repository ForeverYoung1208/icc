<!DOCTYPE html>
<html lang=ru>
<head>
	<title>Icc</title>
	
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
 	<%= csrf_meta_tags %>
	<meta charset="utf-8">

	<%= favicon_link_tag 'favicon.ico?1' %>

</head>

<body>
<div id='all_wrapper'>
	<header>
		<div id='header'>
			<div id='logo'>
				<%= image_tag 'logo.png' %>
			</div>
			<div id='name'>
				<h2>INVESTMENT CONSULTING CENTRE</h2>
				<h2>ЦЕНТР ІНВЕСТИЦІЙНОГО КОНСАЛТИНГУ</h2>
			</div>
		</div>
	</header>

	<%= content_tag( :div, notice, :id=>'notice') if !notice.nil? %>

	<div id='lang-selector'><span><a href="#">ru</a>|<a href="#">en</a>|<a href="#">ua</a></span></div>

	<div id='nav'>
		<ul id='menu'>
			<li>
				<%=link_to_if(@selected_page=='main', t('menu.main'), :main, :remote=>true, :class=>'selected') do
					link_to( t('menu.main'), :main, :remote=>true)
				end%>
			</li>

			<li>
				<%=link_to_if(@selected_page=='services', t('menu.services'), :services, :remote=>true, :class=>'selected') do
					link_to( t('menu.services'), :services, :remote=>true)
				end%>
			</li>

			<li>
				<%=link_to_if(@selected_page=='news', t('menu.news'), :newses, :remote=>true, :class=>'selected') do
					link_to( t('menu.news'), :newses, :remote=>true)
				end%>
			</li>
			<li>
				<%=link_to_if(@selected_page=='contacts', t('menu.contacts'), :contacts, :remote=>true, :class=>'selected') do
					link_to( t('menu.contacts'), :contacts, :remote=>true)
				end%>
			</li>
		</ul>
	</div>
	<div id='content'>
		<%= yield %>
	</div>
	<div style="height:1px;overflow:hidden;clear:both;"></div>
	<footer>
		<div id='footer'>
			<%=t 'footer.copyright' %>
			<br/><br/>
			<%=link_to_if(current_user.nil?, t('footer.login'), :new_user_session) do 
				link_to t('footer.logout')+' ('+current_user.email+')', :destroy_user_session, :method=>:delete 
			end%>
			<br/><br/>

			<%= link_to t('admin_section'), :user_sections, class: "admin_section" if !current_user.nil?&&current_user.admin?%>

		</div>
	</footer>
	
</div>		
</body>

</html>
